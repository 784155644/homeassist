<resources>

    <style name="Theme.Axzae.Main" parent="Theme.Axzae">
    </style>

    <style name="Theme.Axzae" parent="Base.Theme.Axzae">
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.Axzae" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Axzae.YellowAccent" parent="Theme.Axzae">
        <item name="colorAccent">#FFC107</item>
    </style>

    <style name="Theme.Axzae.PrimaryAccent" parent="Theme.Axzae">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.Axzae">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Theme.Axzae.BlueAccent" parent="Theme.Axzae">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Theme.Axzae.EditTheme" parent="Theme.Axzae">
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#03A9F4</item>
    </style>

    <style name="Theme.Axzae.Inverse" parent="Theme.Axzae">

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="colorPrimary">@color/md_white_1000</item>
        <item name="colorPrimaryDark">@color/md_white_1000</item>
        <item name="colorAccent">@color/md_white_1000</item>

        <item name="colorButtonNormal">@color/md_white_1000</item>
        <item name="android:textColorHint">@color/md_white_1000</item>
        <item name="colorControlNormal">@color/md_white_1000</item>
        <item name="colorControlActivated">@color/md_white_1000</item>

        <item name="colorControlHighlight">@color/primary_light</item>

        <item name="md_positive_color">@color/md_blue_500</item>
        <item name="md_negative_color">@color/md_blue_500</item>
        <item name="md_neutral_color">@color/md_blue_500</item>
        <item name="md_btn_ripple_color">@color/md_grey_200</item>

        <!--<item name="met_textColor">@color/md_white_1000</item>-->
        <!--<item name="met_floatingLabelTextColor">@color/md_grey_200</item>-->
        <!--<item name="met_floatingLabelAlwaysShown">true</item>-->
    </style>

    <style name="amu_Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="amu_Bubble.TextAppearance.Light" parent="amu_Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>


</resources>
